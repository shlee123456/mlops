    {
      "id": 5,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 18
      },
      "type": "logs",
      "title": "Error Logs",
      "datasource": {
        "uid": "loki",
        "type": "loki"
      },
      "targets": [
        {
          "expr": "{service=\"mlops\"} |= \"error\" or {service=\"mlops\"} |= \"ERROR\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      }
    },
    {
      "id": 6,
      "gridPos": {
        "h": 6,
        "w": 24,
        "x": 0,
        "y": 26
      },
      "type": "bargauge",
      "title": "Log Level Distribution",
      "datasource": {
        "uid": "loki",
        "type": "loki"
      },
      "targets": [
        {
          "expr": "sum by (level) (count_over_time({service=\"mlops\"} | json [5m]))",
          "refId": "A"
        }
      ],
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient"
      }
    }
