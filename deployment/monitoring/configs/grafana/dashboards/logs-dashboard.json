{
  "title": "Unified Logs Dashboard",
  "tags": [
    "mlops",
    "logs"
  ],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "type": "logs",
      "title": "All Application Logs",
      "datasource": {
        "uid": "loki",
        "type": "loki"
      },
      "targets": [
        {
          "expr": "{service=\"mlops\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      }
