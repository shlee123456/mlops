{
  "title": "Training Metrics",
  "uid": "training-metrics",
  "tags": [
    "mlops",
    "training"
  ],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "type": "logs",
      "title": "Training Logs",
      "description": "클릭하여 상세 보기 - Training Detail 대시보드로 이동",
      "targets": [
        {
          "expr": "{job=\"training\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "links": [
            {
              "title": "실험 상세 보기",
              "url": "/d/training-detail?var-experiment_id=${__field.labels.experiment_id}&var-run_id=${__field.labels.run_id}&from=${__from}&to=${__to}",
              "targetBlank": false
            }
          ]
        }
      },
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      }
    },
    {
      "id": 2,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "type": "stat",
      "title": "Current Training Step",
      "description": "클릭하여 상세 보기 - Training Detail 대시보드로 이동",
      "targets": [
        {
          "expr": "{job=\"training\"} | json | line_format \"{{.step}}\"",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "links": [
            {
              "title": "실험 상세 보기",
              "url": "/d/training-detail?var-experiment_id=${__field.labels.experiment_id}&var-run_id=${__field.labels.run_id}&from=${__from}&to=${__to}",
              "targetBlank": false
            }
          ]
        }
      },
      "options": {
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 3,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "type": "stat",
      "title": "Latest Loss",
      "description": "클릭하여 상세 보기 - Training Detail 대시보드로 이동",
      "targets": [
        {
          "expr": "{job=\"training\"} | json | line_format \"{{.loss}}\"",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "links": [
            {
              "title": "실험 상세 보기",
              "url": "/d/training-detail?var-experiment_id=${__field.labels.experiment_id}&var-run_id=${__field.labels.run_id}&from=${__from}&to=${__to}",
              "targetBlank": false
            }
          ]
        }
      },
      "options": {
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 4,
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 16
      },
      "type": "logs",
      "title": "Training Errors",
      "description": "클릭하여 상세 보기 - Training Detail 대시보드로 이동",
      "targets": [
        {
          "expr": "{job=\"training\", level=\"ERROR\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "links": [
            {
              "title": "실험 상세 보기",
              "url": "/d/training-detail?var-experiment_id=${__field.labels.experiment_id}&var-run_id=${__field.labels.run_id}&from=${__from}&to=${__to}",
              "targetBlank": false
            }
          ]
        }
      },
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      }
    }
  ]
}